{% extends '::layout.html.twig' %}

{% block body -%}
    <h1>Variant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Categoryid</th>
                <td>{{ entity.categoryId }}</td>
            </tr>
            <tr>
                <th>Productid</th>
                <td>{{ entity.productId }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Showfrom</th>
                <td>{{ entity.showFrom|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Showto</th>
                <td>{{ entity.showTo|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Specialprice</th>
                <td>{{ entity.specialPrice }}</td>
            </tr>
        </tbody>
    </table>

    <p>
        <a href="{{ path('variant') }}" class="btn btn-primary">
            Back to the list
        </a>
        <a href="{{ path('variant_edit', { 'id': entity.id }) }}" class="btn btn-primary">
            Edit
        </a>
        {{ form_start(delete_form) }}
        {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-primary'}}) }}

        {{ form_rest(delete_form) }}
        {{ form_end(delete_form) }}
    </p>
{% endblock %}
