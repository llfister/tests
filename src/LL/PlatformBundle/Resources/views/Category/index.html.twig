{% extends '::layout.html.twig' %}

{% block body -%}
    <h1>Category list</h1>
    <ul class="list-unstyled">
        <li>
            <a href="{{ path('category_new') }}" class="btn btn-primary pull-right">
                Create a new entry
            </a>
        </li>
    </ul>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                <ul class="list-unstyled">
                    <li>
                        <a href="{{ path('category_show', { 'id': entity.id }) }}" class="btn btn-primary">show</a>
                    </li>
                    <li>
                        <a href="{{ path('category_edit', { 'id': entity.id }) }}" class="btn btn-primary">edit</a>
                    </li>
                    <li>
                        <form action="{{ path('category_delete', { 'id': entity.id }) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE" />
                            {{ form_widget(deleteForms[entity.id]) }}
                        </form>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
