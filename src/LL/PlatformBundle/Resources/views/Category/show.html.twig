{% extends '::layout.html.twig' %}

{% block body -%}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="list-unstyled">
        <li>
            <a href="{{ path('category') }}" class="btn btn-primary">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('category_edit', { 'id': entity.id }) }}" class="btn btn-primary">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
